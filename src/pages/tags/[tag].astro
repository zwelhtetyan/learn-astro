---
import BlogPost from "../../components/BlogPost.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const allPosts = await Astro.glob("../posts/*.md");
  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) =>
      post.frontmatter.tags?.includes(tag)
    );

    return { params: { tag }, props: { posts: filteredPosts } };
  });

  // return [
  //   { params: { tag: "astro" }, props: { posts: filteredPosts } },
  //   { params: { tag: "successes" }, props: { posts: filteredPosts } },
  //   { params: { tag: "community" }, props: { posts: filteredPosts } },
  // ];
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseLayout pageTitle={tag}>
  <p>Posts tagged with <b>_<em>{tag}</em>_</b></p>

  {
    posts.map((post) => (
      <BlogPost title={post.frontmatter.title} url={post.url} />
    ))
  }
</BaseLayout>
